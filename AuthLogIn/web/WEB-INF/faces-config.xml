<?xml version='1.0' encoding='UTF-8'?>
 
 
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 
        <managed-bean>
            <managed-bean-name>bean</managed-bean-name>
            <managed-bean-class>project.web.bean</managed-bean-class>
        
            <managed-bean-scope>request</managed-bean-scope></managed-bean>
        
    <navigation-rule>
        
        <from-view-id>Login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{bean.checkForValidUser}</from-action>
            <from-outcome>1</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{bean.checkForValidUser}</from-action>
            <from-outcome>2</from-outcome>
            <to-view-id>IndexAdmin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{bean.checkForValidUser}</from-action>
            <from-outcome>0</from-outcome>
            <to-view-id>Login.xhtml</to-view-id>
        </navigation-case>
 
    </navigation-rule>
    
    
</faces-config>